
<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<li>Ho ten: <%= @user.name %></li>
				<li> Que quan: <%= @user.que_quan %></li>
				<li>Gioi tinh: 
					<%if @user.gioi_tinh ==1%>
						nam
					<%elsif @user.gioi_tinh ==0%>
						nu
					<%else%>
					NA
 					<%end %> </li>
				<li>Ngay sinh: <%=@user.date_of_birth %></li>
			</h1>
		</section>
		<section class="stats">
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="col-md-8">
	<%= render 'follow_form' if logged_in? %>
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>	
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>